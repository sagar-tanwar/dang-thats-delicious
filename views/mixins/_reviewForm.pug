mixin reviewForm(store = {})
  form.reviewer(action=`/reviews/${store._id}` method="POST")
    textarea(name="text" placeholder="Did you try this place? Have somthing to say? Leave a review...")
    .reviewer__meta
      .reviewer__stars
        each rating in [5, 4, 3, 2, 1]
          input(id=`star${rating}` type="checkbox" name="rating" value=rating)
          label(for=`star${rating}`)
      input.button(type="submit" value="Submit Review")