mixin review(review)
  .review
    .review__header
      .review__author
        img.avatar(src=review.author.gravatar alt=review.author)
        p= review.author.name
      .review__stars(title=`Rated ${review.rating} out of the 5 stars`)
        = `★`.repeat(review.rating)
        = `☆`.repeat(5 - review.rating)
      time.review__time(datetime=review.created)= h.moment(review.created).fromNow()
    .review__body
      p= review.text
